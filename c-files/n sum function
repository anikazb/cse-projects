//the sum of given number using function


#include<stdio.h>
void sum()
{ int n,i,sum=0;
printf("enter the number=");
scanf("%d",&n);
for(i=1;i<=n;i++)
{sum=sum+i;
printf("the total sum of num=%d\n",sum);}}

int main()
{ sum();
return 0;}


//test
